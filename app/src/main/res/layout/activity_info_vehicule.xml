<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.unamur.projetLabo.activities.InfoVehiculeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/primary_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Statut Véhicule"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding_m"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/primary"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Fin Location"
            android:id="@+id/textView7"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/renting_end_date"
            android:textSize="30sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:paddingLeft="65dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="10dp"
        android:background="@color/primary"
        android:id="@+id/linearLayout8">

        <TextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Modèle "
            android:id="@+id/textView8"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/car_model"
            android:paddingRight="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_doors"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/car_door"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_key"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/car_key"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/car_fuel_quantity"
            android:layout_alignStart="@+id/car_fuel_quantity" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_fuel_quantity"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/case" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bluetooth_activated"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/blueetooth"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/car_doors"
            android:layout_alignStart="@+id/car_doors" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Essence"
            android:id="@+id/textView6"
            android:paddingLeft="120dp"
            android:textSize="30sp"
            android:paddingTop="8dp" />

    </LinearLayout>

</RelativeLayout>
