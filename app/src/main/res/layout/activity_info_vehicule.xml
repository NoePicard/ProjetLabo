<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.unamur.projetLabo.activities.InfoVehiculeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/primary_green_title_hugh"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Statut Véhicule"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:paddingTop="15dp"
            android:paddingLeft="55dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="15dp"
        android:background="@color/primary_green_hugh"
        android:id="@+id/linearLayout6">

        <TextView
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:text="En location "
            android:id="@+id/textView6"
            android:paddingLeft="10dp"
            android:textSize="30dp"
            android:paddingTop="8dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/renting_true"
            android:layout_marginRight="10dp"
            android:background="@drawable/correct_v"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="10dp"
        android:background="@color/primary_green_hugh"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Jusqu&apos;au "
            android:id="@+id/textView7"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="New"
            android:id="@+id/renting_end_date"
            android:textSize="30sp"
            android:paddingTop="8dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/calendar"
            android:background="@drawable/calendar"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="10dp"
        android:background="@color/primary_green_hugh"
        android:id="@+id/linearLayout8">

        <TextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Modèle "
            android:id="@+id/textView8"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/car_model"
            android:paddingRight="10dp"
            android:textSize="30sp"
            android:paddingTop="8dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout8"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>
</RelativeLayout>
